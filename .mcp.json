{
  "inputs": [
    {
      "id": "log_path",
      "description": "Path to log files directory",
      "type": "promptString",
      "default": "./Logs"
    }
  ],
  "servers": {
    "log-query-server": {
      "type": "stdio",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "MCP/LogQueryServer"
      ],
      "env": {
        "LOG_PATH": "${input:log_path}"
      }
    },
    "metrics-server": {
      "type": "stdio",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "MCP/MetricsServer"
      ],
      "env": {
        "ENVIRONMENT": "production"
      }
    },
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp"
    }
  }
}